<h1>Add role</h1>
<form action="" method="post">
  <div class="mb-3">
    <% if (msg?.length) { %>
    <div class="text-danger mb-3"><%= msg %></div>
    <% } %>
    <label for="">Name</label>
    <input type="text" name="name" class="form-control" placeholder="Name..." />
  </div>
  <div class="mb-3">
    <table class="table table-bordered">
      <tr>
        <th width="20%">Role function</th>
        <th>Permission</th>
      </tr>
      <tr>
        <td>User Management</td>
        <td>
          <div class="row">
            <div class="col-3">
              <label>
                <input type="checkbox" name="permissions" value="users.read" />
                View
              </label>
            </div>
            <div class="col-3">
              <label>
                <input
                  type="checkbox"
                  name="permissions"
                  value="users.create"
                />
                Add
              </label>
            </div>
            <div class="col-3">
              <label>
                <input
                  type="checkbox"
                  name="permissions"
                  value="users.update"
                />
                Edit
              </label>
            </div>
            <div class="col-3">
              <label>
                <input
                  type="checkbox"
                  name="permissions"
                  value="users.delete"
                />
                Delete
              </label>
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <td>Role management</td>
        <td>
          <div class="row">
            <div class="col-3">
              <label>
                <input type="checkbox" name="permissions" value="roles.read" />
                View
              </label>
            </div>
            <div class="col-3">
              <label>
                <input
                  type="checkbox"
                  name="permissions"
                  value="roles.create"
                />
                Add
              </label>
            </div>
            <div class="col-3">
              <label>
                <input
                  type="checkbox"
                  name="permissions"
                  value="roles.update"
                />
                Edit
              </label>
            </div>
            <div class="col-3">
              <label>
                <input
                  type="checkbox"
                  name="permissions"
                  value="roles.delete"
                />
                Delete
              </label>
            </div>
          </div>
        </td>
      </tr>
    </table>
  </div>
  <button class="btn btn-primary">Save changes</button>
  <a href="/roles" class="btn btn-danger">Cancel</a>
</form>
