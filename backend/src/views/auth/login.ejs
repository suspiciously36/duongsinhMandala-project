<body>
  <h1 class="d-flex justify-content-center mt-5 mb-3">Login Page</h1>
  <div class="d-flex justify-content-center">
    <% if (error?.length) { %>
    <div class="text-danger text-center mb-3"><%= error %></div>
    <% } %> <% if (successMsg?.length) { %>
    <div class="text-success text-center mb-3"><%= successMsg %></div>
    <% } %>
  </div>
  <main class="form-signin w-50 m-auto">
    <form action="/auth/login" method="post">
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="email"
          name="email"
          id="floatingInput"
          placeholder="Email..."
          value="<%= req?.olds?.email %>"
        />
        <label for="floatingInput">Email...</label>
        <span class="text-danger"><%= req?.errors?.email %></span>
      </div>
      <div class="form-floating">
        <input
          class="form-control"
          type="password"
          name="password"
          id="floatingPassword"
          placeholder="Password..."
        />
        <label for="floatingPassword">Password...</label>
        <span class="text-danger"><%= req?.errors?.password %></span>
      </div>
      <div class="form-check text-start my-3">
        <input
          class="form-check-input"
          type="checkbox"
          name="remember-me"
          value="remember-me"
          id="flexCheckDefault"
          checked
        />
        <label for="flexCheckDefault"> Remember me! </label>
      </div>
      <button class="btn btn-primary w-100 py-2">Login</button>
      <div class="text-center mb-3 mt-3">--- OR ---</div>
      <a
        href="/auth/google"
        class="btn btn-danger mt-2 d-flex justify-content-center"
        >Login with Google</a
      >
      <div class="d-flex justify-content-between">
        <a href="/auth/forgot-password" class="d-flex justify-content-end mt-3"
          >Forgot your password?</a
        >
        <a href="/auth/register" class="d-flex justify-content-end mt-3"
          >Create new account -></a
        >
      </div>
    </form>
  </main>
</body>
