<h1 class="d-flex justify-content-center mt-5">Forgot Password Page</h1>

<main class="form-signin w-50 m-auto">
  <form action="" method="post">
    <div class="form-floating mb-3">
      <input
        class="form-control"
        type="email"
        name="email"
        id="floatingNewPassword"
        placeholder="Email..."
      />
      <label for="email"> Enter your email here... </label>

      <span class="text-danger"><%= req?.errors?.email %></span>
    </div>

    <button class="btn btn-primary w-100 py-2 mb-3">
      Get password reset link
    </button>
    <a href="/" class="btn btn-danger w-100 py-2 mb-3">Back to homepage</a>
  </form>
</main>
