<body>
  <h1 class="d-flex justify-content-center mt-5">Change your password here:</h1>
  <div class="d-flex justify-content-center mb-3">
    <span class="text-danger"
      ><% if (msg?.length) { %> <%= msg %> <% } %>
    </span>
  </div>
  <main class="form-signin w-50 m-auto">
    <form action="/passwordChange" method="post">
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="password"
          name="password"
          id="floatingOldPassword"
          placeholder="Password cũ..."
        />
        <label for="floatingOldPassword">Old password...</label>
        <span class="text-danger"><%= req?.errors?.password %></span>
      </div>
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="password"
          name="newPassword"
          id="floatingNewPassword"
          placeholder="Password mới..."
        />
        <label for="floatingNewPassword">New password...</label>

        <span class="text-danger"><%= req?.errors?.newPassword %></span>
      </div>
      <div class="form-floating mb-3">
        <input
          class="form-control"
          type="password"
          name="newPassword2"
          id="floatingNewPassword2"
          placeholder="Nhập lại password mới..."
        />
        <label for="floatingNewPassword2">Retype new password...</label>

        <span class="text-danger"><%= req?.errors?.newPassword2 %></span>
      </div>

      <button class="btn btn-primary w-100 py-2 mb-3">Save</button>
      <a href="/" class="btn btn-danger w-100 py-2 mb-3">Cancel</a>
    </form>
  </main>
</body>
